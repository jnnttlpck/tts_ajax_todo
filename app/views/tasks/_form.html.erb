<%= form_with(model: Task.new, remote: true, id:"form") do |form| %>


  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :task_description %>
  </div>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline, id: :task_deadline %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
